
<div class = "row">
<div class="col-md-6 col-md-offset-3">

	<%= simple_form_for([@restaurant, @restaurant.reviews.build]) do |f| %>
		<div id="rating-form">
			<label>Rating</label>
		</div>
		<%= f.text_area :content %>
		<%= f.button :submit, :class => "btn btn-primary" %>
	<% end %>

</div>
</div>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[stars]'
	});
</script>